    </div>
</div>

<div>
    <a asp-controller= "Devices" asp-action="SearchDevice" class="btn btn-outline-primary">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
